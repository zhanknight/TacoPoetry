@page "/";
@page "/poetry";

<div class="flex">
    <div class="pt-2 pb-1 px-6">
        <div class="uppercase tracking-wide text-sm text-orange-500 font-semibold">Taco Poetry</div>
        <p class="mt-2 text-slate-500">Poems generated by an LLM and attributed to fake, LLM generated authors.</p>
    </div>
</div>

<div class=" flex flex-wrap p-2 ">
    @foreach (Content c in allContent)
        {
            <ContentCard Content="c" />
        }
</div>

@code {

    [Inject]
    public ITacoDataService TacoDataService { get; set; }

    public IEnumerable<Content> allContent { get; set; } = new List<Content>();

    protected async override Task OnInitializedAsync()
    {
        allContent = await TacoDataService.GetAllContent();
    }
}
