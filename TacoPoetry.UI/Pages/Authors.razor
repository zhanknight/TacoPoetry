@page "/authors";

<div class="flex">
    <div class="pt-2 pb-1 px-6">
        <div class="uppercase tracking-wide text-sm text-orange-500 font-semibold">Authors</div>
        <p class="mt-2 text-slate-500">Completely fake authors generated by an LLM.</p>
    </div>
</div>

<div class=" flex flex-wrap p-2 ">
    @foreach (Author a in AllAuthors)
    {
        <AuthorCard Author="a" />
    }
</div>

@code {

    [Inject]
    public ITacoDataService TacoDataService { get; set; }

    public IEnumerable<Author> AllAuthors { get; set; } = new List<Author>();

    protected async override Task OnInitializedAsync()
    {
        AllAuthors = await TacoDataService.GetAllAuthors();
    }
}
