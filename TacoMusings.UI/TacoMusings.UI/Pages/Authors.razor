@page "/authors";

<div class="md:flex">
    <div class="pt-2 pb-1 px-6">

        <div class="uppercase tracking-wide text-sm text-orange-500 font-semibold">Authors</div>
        <p class="mt-2 text-slate-500">Completely fake authors generated by an LLM.</p>
    </div>



</div>

<div class="container flex flex-wrap p-2 ">

    <AuthorCard Author="testAuthor" />





</div>

@code {

    [Inject]
    public ITacoDataService TacoDataService { get; set; }

    public Author testAuthor = new Author { AuthorName = "Evan Knight", AuthorBio = "Evan is a guy who is using blazor and tailwind for the first time. It's super nifty, wow." };



    public List<Author> AllAuthors { get; set; } = new List<Author>();


    protected async override Task OnInitializedAsync()
    {
        var AllAuthors = await TacoDataService.GetAllAuthors();
    }
}
