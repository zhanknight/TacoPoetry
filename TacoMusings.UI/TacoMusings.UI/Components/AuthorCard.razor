<div class="rounded overflow-hidden shadow-lg mb-4">

    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">@Author.AuthorName</div>
        <p class="text-gray-700 text-base">
            @Author.AuthorBio
        </p>
        <div class="font-bold mb-2 flex justify-end">
            <NavLink href="@($"authors/{Author.AuthorName}")" class="block mt-4 lg:inline-block lg:mt-0 text-yellow-500 hover:text-amber-300 mr-4">
                View musings by this author
            </NavLink>
        </div>

    </div>


</div>

@code {

    [Parameter]
    public Author? Author { get; set; }

}


